# Production Environment
# Copy this file to .env.production after deploying your worker

# Backend API URL (Your deployed Cloudflare Worker)
# Replace with your actual worker URL from: wrangler deploy
VITE_API_URL=https://quizlink-api.your-subdomain.workers.dev

# WebSocket URL (Same as API URL but with wss://)
VITE_WS_URL=wss://quizlink-api.your-subdomain.workers.dev

# Optional: Disable debug logging in production
VITE_DEBUG=false

